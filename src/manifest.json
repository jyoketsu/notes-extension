{
  "name": "Picks Extension",
  "version": "0.0.1",
  "description": "web clips",
  "homepage_url": "https://picks.working.cn",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage", "contextMenus", "notifications", "tabs"],
  "host_permissions": ["*://*/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_title": "Picks",
    "default_icon": "icons/128.png",
    "default_popup": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["picks.js", "Readability.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
